# =====================================================
# TaskBeacon Configuration (Example)
# Copy/Rename this file to `.env` and fill in real values.
# =====================================================

# === Environment ===
# dev | prod
ENV=dev

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO


# === Database ===
# PostgreSQL connection string
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/taskbeacon

# Per-statement timeout in milliseconds (protects from runaway queries)
DB_STATEMENT_TIMEOUT_MS=5000


# === Auth ===
# Generate a strong secret for production:
# python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET=REPLACE_WITH_RANDOM_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60


# === Web ===
# Allowed frontend origins (comma separated OR JSON list depending on parser)
CORS_ORIGINS=["http://localhost:3000"]

# Hosts allowed to access the API (used in production)
ALLOWED_HOSTS=["localhost","127.0.0.1"]
